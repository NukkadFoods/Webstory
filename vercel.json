{
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*\\.(?:png|jpg|jpeg|webp|avif|ico|svg))",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*\\.(?:js|css))",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/unsubscribe",
      "destination": "https://webstorybackend.onrender.com/unsubscribe"
    },
    {
      "source": "/robots.txt",
      "destination": "https://webstorybackend.onrender.com/robots.txt"
    },
    {
      "source": "/sitemap.xml",
      "destination": "https://webstorybackend.onrender.com/sitemap.xml"
    },
    {
      "source": "/news-sitemap.xml",
      "destination": "https://webstorybackend.onrender.com/news-sitemap.xml"
    },
    {
      "source": "/video-sitemap.xml",
      "destination": "https://webstorybackend.onrender.com/video-sitemap.xml"
    },
    {
      "source": "/api/schema/:path*",
      "destination": "https://webstorybackend.onrender.com/api/schema/:path*"
    },
    {
      "source": "/read/:path*",
      "destination": "https://webstorybackend.onrender.com/read/:path*"
    },
    {
      "source": "/article/:path*",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(?i).*(bot|crawl|spider|facebookexternalhit|twitterbot|linkedinbot|whatsapp|telegrambot|slackbot|discordbot|pinterest|reddit|gpt|perplexity|claude|anthropic|apple|embedly|quora|flipboard|tumblr|bitly|google|bing|yandex|baidu|duckduck).*"
        }
      ],
      "destination": "https://webstorybackend.onrender.com/article/:path*"
    }
  ]
}
